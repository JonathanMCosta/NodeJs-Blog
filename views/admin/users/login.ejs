<%- include ('../../partials/header.ejs') %>

<div class="container">
  <div class="card mt-5">
    <div class="card-header">
      <h2>Acesso interno</h2>
    </div>
    <div class="card-body">
      <form action="/authenticate" method="POST">
        <input
          type="email"
          class="form-control"
          name="email"
          placeholder="email@example.com.br"
        />
        <br />
        <input
          type="password"
          class="form-control"
          name="password"
          placeholder="**********"
        />
        <br />
        <button class="btn btn-success btn-block" type="submit">Acessar</button>
      </form>
    </div>
  </div>
</div>
