<%- include ('../../partials/header.ejs') %> <%- include
('../../partials/homenavbar.ejs') %>

<div class="container col col-8">
  <hr />
  <% result.articles.rows.forEach(article => { %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"></h5>
      <p class="card-text">
        <%= article.title %>
      </p>
      <a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
    </div>
  </div>
  <br />
  <% }) %>

  <div class="row">
    <div class="col col-12">
      <% if(result.page > 2) { %>
      <a style="float: left;" href="/articles/page/<%= result.page - 1%>">
        <<< Prev</a
      >
      <%} else if(result.page == 2) {%>
      <a style="float: left;" href="/"> <<< Prev</a>
      <% } %> <% if(result.next) { %>
      <a style="float: right;" href="/articles/page/<%= result.page + 1%>"
        >Next >>></a
      >
      <% } %>
    </div>
  </div>
  <br />
</div>

<%- include ('../../partials/footer.ejs') %>
